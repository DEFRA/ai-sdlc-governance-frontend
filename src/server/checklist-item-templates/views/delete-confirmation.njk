{% extends "layouts/page.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block pageTitle %}Delete Checklist Item Template - Defra SDLC Governance Checklist{% endblock %}

{% block content %}
<div class="govuk-width-container">
  <main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <a href="/checklist-item-templates/{{ checklistItem._id }}" class="govuk-back-link">Back to checklist item</a>

        {% if error %}
          <div class="govuk-error-summary" role="alert" tabindex="-1">
            <h2 class="govuk-error-summary__title">Error</h2>
            <div class="govuk-error-summary__body">
              <p>{{ error }}</p>
            </div>
          </div>
        {% endif %}

        <h1 class="govuk-heading-xl">Delete Checklist Item Template</h1>
        
        {{ govukWarningText({
          text: "This action cannot be undone.",
          iconFallbackText: "Warning"
        }) }}

        <p class="govuk-body">Are you sure you want to delete the checklist item template: <strong>{{ checklistItem.name }}</strong>?</p>

        <form method="POST" action="/checklist-item-templates/{{ checklistItem._id }}/delete" novalidate>
          <div class="govuk-button-group">
            {{ govukButton({
              text: "Yes, delete checklist item",
              classes: "govuk-button--warning",
              attributes: {
                "data-testid": "confirm-delete-button"
              }
            }) }}

            <a href="/checklist-item-templates/{{ checklistItem._id }}" class="govuk-link">
              Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </main>
</div>
{% endblock %} 