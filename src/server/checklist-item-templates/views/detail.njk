          {{ govukInput({
            label: {
              text: "Item Name",
              classes: "govuk-label--m"
            },
            id: "name",
            name: "name",
            value: value.name if value else checklistItem.name,
            errorMessage: {
              text: "Enter an item name"
            } if error,
            attributes: {
              "data-testid": "item-name"
            }
          }) }}

          {{ govukTextarea({
            label: {
              text: "Description",
              classes: "govuk-label--m"
            },
            id: "description",
            name: "description",
            value: value.description if value else checklistItem.description,
            attributes: {
              "data-testid": "item-description"
            }
          }) }}

          {{ govukRadios({
            idPrefix: "type",
            name: "type",
            fieldset: {
              legend: {
                text: "Item Type",
                classes: "govuk-fieldset__legend--m"
              }
            },
            items: [
              {
                value: "approval",
                text: "Approval",
                checked: (value.type if value else checklistItem.type) === "approval"
              },
              {
                value: "document",
                text: "Document",
                checked: (value.type if value else checklistItem.type) === "document"
              },
              {
                value: "task",
                text: "Task",
                checked: (value.type if value else checklistItem.type) === "task"
              }
            ]
          }) }} 